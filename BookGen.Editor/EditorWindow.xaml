<Window
    x:Class="BookGen.Editor.EditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookGen.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EditorWindow"
    Width="800"
    Height="450"
    Style="{StaticResource {x:Type Window}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Ribbon
            Background="Gray"
            BorderBrush="Brown"
            CheckedBackground="LightBlue"
            CheckedBorderBrush="Blue"
            FocusedBackground="LightSlateGray"
            FocusedBorderBrush="SlateBlue"
            MouseOverBackground="LightCoral"
            MouseOverBorderBrush="Coral"
            PressedBackground="LightGreen"
            PressedBorderBrush="Green">
            <Ribbon.HelpPaneContent>
                <RibbonButton SmallImageSource="Icons\editor\icons8-help-48.png" />
            </Ribbon.HelpPaneContent>
            <Ribbon.QuickAccessToolBar>
                <RibbonQuickAccessToolBar>
                    <RibbonButton
                        SmallImageSource="Icons\editor\icons8-save-48.png"
                        ToolTip="Save" />
                    <RibbonButton
                        SmallImageSource="Icons\editor\icons8-undo-48.png"
                        ToolTip="Undo" />
                    <RibbonButton
                        SmallImageSource="Icons\editor\icons8-right-2-48.png"
                        ToolTip="Redo" />
                </RibbonQuickAccessToolBar>
            </Ribbon.QuickAccessToolBar>
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu KeyTip="F">
                    <RibbonApplicationMenuItem
                        Header="Save"
                        ImageSource="Icons\editor\icons8-save-48.png" />
                    <RibbonApplicationMenuItem
                        Header="Exit"
                        ImageSource="Icons\editor\icons8-exit-48.png" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab
                Header="Editor"
                KeyTip="E">
                <RibbonGroup Header="Clipboard">
                    <RibbonButton
                        KeyTip="V"
                        Label="Paste"
                        LargeImageSource="Icons\editor\icons8-paste-48.png" />
                    <RibbonButton
                        KeyTip="X"
                        Label="Cut"
                        SmallImageSource="Icons\editor\icons8-scissors-48.png" />
                    <RibbonButton
                        KeyTip="C"
                        Label="Copy"
                        SmallImageSource="Icons\editor\icons8-copy-48.png" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
    </Grid>
</Window>
