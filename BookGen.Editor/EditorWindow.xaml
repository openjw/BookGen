<Fluent:RibbonWindow
    x:Class="BookGen.Editor.EditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Fluent="urn:fluent-ribbon"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Editor"
    Width="800"
    Height="450"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Fluent:Ribbon Grid.Row="0">
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>
                    <Fluent:BackstageTabControl>
                        <Fluent:Button Header="Save" />
                        <Fluent:BackstageTabItem Header="Preview" />
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>
            <Fluent:RibbonTabItem Header="Home">
                <Fluent:RibbonGroupBox Header="Clipboard">
                    <Fluent:Button
                        Header="Paste"
                        KeyTip="V"
                        LargeIcon="Icons/editor/icons8-paste-48.png" />
                    <Fluent:Button
                        Header="Cut"
                        KeyTip="X"
                        LargeIcon="Icons/editor/icons8-scissors-48.png" />
                    <Fluent:Button
                        Header="Copy"
                        KeyTip="C"
                        LargeIcon="Icons/editor/icons8-copy-48.png" />
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>
        <avalonEdit:TextEditor
            Grid.Row="1"
            FontFamily="Consolas"
            FontSize="14"
            Foreground="White"
            SyntaxHighlighting="Markdown" />
        <Fluent:StatusBar Grid.Row="2">
            <TextBlock Text="150 px" />
        </Fluent:StatusBar>
    </Grid>
</Fluent:RibbonWindow>
