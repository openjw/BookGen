<UserControl
    x:Class="BookGen.Editor.View.ConfigEditors.AssetEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DataGrid
        ItemsSource="{Binding Assets}"
        CanUserAddRows="True"
        CanUserDeleteRows="True">
        <DataGrid.Columns>
            <DataGridTextColumn
                Width="1*"
                Binding="{Binding Path=Source, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True, ValidatesOnExceptions=True}"
                Header="Source path" />
            <DataGridTextColumn
                Width="1*"
                Binding="{Binding Path=Target, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True, ValidatesOnExceptions=True}"
                Header="Target path" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
