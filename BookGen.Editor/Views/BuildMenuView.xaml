<UserControl
    x:Class="BookGen.Editor.Views.BuildMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="50"
    mc:Ignorable="d">
    <ToolBarTray Orientation="Vertical" Background="Transparent">
        <ToolBar>
            <Button
                Command="{Binding OpenFileExplorerCommand}"
                Content="{StaticResource OpenFileExplorer}"
                ToolTip="Open File selector..." />
            <Separator />
            <Button
                Command="{Binding InitCommand}"
                Content="{StaticResource BuildInit}"
                ToolTip="Init..." />
            <Button
                Command="{Binding CleanCommand}"
                Content="{StaticResource BuildClean}"
                ToolTip="Clean..." />
            <Separator />
            <Button
                Command="{Binding RunBookGenCommand}"
                Content="{StaticResource BuildBook}"
                ToolTip="Open BookGen builder..." />
        </ToolBar>
    </ToolBarTray>
</UserControl>
