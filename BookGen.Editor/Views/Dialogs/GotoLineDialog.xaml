<Window
    x:Class="BookGen.Editor.Views.Dialogs.GotoLineDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookGen.Editor.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Go to Line"
    Width="300"
    Height="160"
    FocusManager.FocusedElement="{Binding ElementName=Slider}"
    KeyDown="Window_KeyDown"
    Style="{StaticResource DialogWindow}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Window.Resources>
        <Style
            BasedOn="{StaticResource {x:Type Button}}"
            TargetType="Button">
            <Setter Property="MinHeight" Value="25" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Margin" Value="3" />
        </Style>
    </Window.Resources>
    <StackPanel Margin="5">
        <TextBlock Text="Line Number: ({0} - {1})" />
        <TextBox
            x:Name="Linenumber"
            Margin="0,5"
            Text="{Binding ElementName=Slider, Path=Value, Mode=TwoWay}" />
        <Slider
            x:Name="Slider"
            Margin="0,5"
            IsSnapToTickEnabled="True"
            Maximum="1"
            Minimum="0"
            TickFrequency="1"
            Value="0" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="BtnOk"
                Click="BtnOk_Click"
                Content="Ok [Ctrl+Enter]"
                Style="{StaticResource DialogButton}" />
            <Button
                x:Name="BtnCancel"
                Click="BtnCancel_Click"
                Content="Cancel [Esc]"
                Style="{StaticResource DialogButton}" />
        </StackPanel>
    </StackPanel>
</Window>
